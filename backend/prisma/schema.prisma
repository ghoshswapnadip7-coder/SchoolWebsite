generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("STUDENT") // STUDENT, TEACHER, ADMIN
  createdAt DateTime @default(now())
}

model GalleryItem {
  id          String   @id @default(uuid())
  title       String
  description String?
  imageUrl    String
  category    String?
  createdAt   DateTime @default(now())
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  location    String?
  createdAt   DateTime @default(now())
}
